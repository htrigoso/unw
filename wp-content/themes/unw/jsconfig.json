{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ESNext",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@styles/*": ["src/@core/styles/*"],
      "@classes/*": ["src/@core/classes/*"],
      "@shared/*": ["src/@core/shared/*"],
      "@libs/*": ["src/@core/libs/*"],
      "@utils/*": ["src/@core/libs/utils/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"]
    }
  },
  "exclude": ["node_modules", "test", "build", ".husky"]
}
