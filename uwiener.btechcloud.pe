# Custom configuration for uwiener.btechcloud.pe
# This file will be included in the server block for this domain

# Proxy all requests to WordPress container
# WordPress will handle the /www-02 routing internally
location / {
    proxy_pass http://wordpress:80;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_redirect off;
}
